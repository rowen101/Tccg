@model IEnumerable<tccgv2.Models.clsMenu>
<div id="mnulst">


    <nav class="nav-collapse collapse">
        <ul class="nav">
            <li>
                @Html.ActionLink("Home", "Index")
            </li>

            @foreach (var menuitem in Model)
            {
                if (menuitem.submenulist.Count == 0)
                {
                <li>
                    @Html.ActionLink(menuitem.menuname, menuitem.menuvalue,menuitem.menucontroller,null,null)
                </li>
                }
                else
                {
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">@Html.Raw(menuitem.menuname)
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu" role="menu">

                        @foreach (var subitem in menuitem.submenulist)
                        { 
                            <li>
                                @Html.ActionLink(subitem.submenuname, subitem.submenuid, subitem.subcontroller, null, new { role="menuitem"})
                            </li>
                        }

                    </ul>
                </li>
                }
            }
             <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Help
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                            <li>
                               @Html.ActionLink("About","About")
                            </li>
                        <li>
                               @Html.ActionLink("Logout","logout")
                            </li>
                      
                    </ul>
                </li>
        </ul>
    </nav>
</div>
