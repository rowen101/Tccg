@model PagedList.IPagedList<tccgv2.Models.Userlist>
@using PagedList.Mvc;
@{
    ViewBag.Title = "TCCG | User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="lead">User List</p>
<p>
    @Html.ActionLink("New User", "create-new-user")
</p>
<div class="text-right">
    <div class="input-append">
        @using (Html.BeginForm("user-list", "MasterFile", FormMethod.Get))
        {
            @Html.TextBox("s", ViewBag.CurrentFilter as string, new { @class = "span2" }) 
            <button class="btn" type="submit">Search</button>
        }
    </div>
</div>
<table class="table table-hover table-condensed">
    <tr>
        <th></th>
        <th>Username</th>
        <th>Full Name</th>
        <th>Designation</th>
        <th>Email</th>
        <th>Group</th>
        <th>Is Active</th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink("Modify", "edit-user", new { id=item.username }) | <a href="#" onclick="showdel('@item.username')" data-toggle="modal" data-target="#myModal">Delete</a></td>
            <td>@Html.DisplayFor(mod => item.username)</td>
            <td>@Html.DisplayFor(mod => item.fullname)</td>
            <td>@Html.DisplayFor(mod => item.designation)</td>
            <td>@Html.DisplayFor(mod => item.email)</td>
            <td>@Html.DisplayFor(mod => item.Group)</td>
            <td>@Html.DisplayFor(mod => item.isactive)</td>
            
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, p => Url.Action("user-list",
    new { p, systemid = ViewBag.currentsystem , sc = ViewBag.CurrentFilter }))


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Delete</h4>
            </div>
            <div class="modal-body">
           <p class="lead">Are you sure you want to remove username : <span id="suname"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-additem" onclick="del();" class="btn btn-primary" data-dismiss="modal">Ok</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showdel(param)
    {

        $('#suname').text(param);
    }

    function del()
    {

        var jsondata = JSON.stringify({ uname: $('#suname').text() },null,2);
        $.ajax({
            url: '@Url.Content("~/JsonResult/delete-user/")',
              type: 'POST',
              data: jsondata,
              datatype: 'json',
              contentType: 'application/json; charset=utf-8',
              success: function (data) {
                  if (data.result == true) {
                      window.location.replace('@Url.Content("~/MasterFile/user-list")');
                  }
                  else {
                      alert(data.err.toString());
                  }

              },
              error: function (request, status, err) {
                  alert(status);
                  alert(err);
              }
          });
    }
</script>